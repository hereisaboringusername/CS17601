import java.util.Scanner;
import java.util.ArrayList;


public class ColorSearch {

	 Scanner scan = new Scanner(System.in);
	 ArrayList<String> colors = new ArrayList<String>();	

	public  void SearchColor(String searchc){
		for(int color = 0; color<colors.size(); color ++) {
			// check for color
			if (searchc.toLowerCase().equals(colors.get(color))) {
				System.out.println("The color " + searchc.toLowerCase() + " was found after " + (color+1) + " searches.");
				return;
			}
		}
		System.out.println("The color " + searchc.toLowerCase() + " was not found after " + colors.size() + " searches.");
	}


		ColorSearch search = new ColorSearch();
		String colorvalue = "";
		String  quit  = "q";
		boolean loop = true; {

		
		for (!colorvalue.toLowerCase().equals(quit)) {
			// First loop check
			if (loop) {
				loop = false;
			}
			else {
				colors.add(colorvalue);
			}
			// Input color
			System.out.print("Enter a color to add to the list or press \"q\" to quit (non case-sensitive): ");
			colorvalue = scan.nextLine().toLowerCase();
		}

		// Reset variables
		loop = true;
		colorvalue = "";


		// Search for predetermined colors
		System.out.println();
		search.SearchColor("violet");
		search.SearchColor("green");
		search.SearchColor("yellow");
		search.SearchColor("teal");

		// SearchColor loop
		while(!colorvalue.toLowerCase().equals(quit)) {
			// First loop check
			if (loop) {
				loop = !true; //false
			}
			else  {
				search.SearchColor(colorvalue);
			}
			// Input color
			System.out.print("Enter a color to search for or \"q\" to quit (non case-sensitive): ");
			colorvalue = scan.nextLine().toLowerCase();
		}
		System.out.println("Goodbye.");
	}
}
